if [[ $1 = "-h" ]] ; then
    cat << EOF
Script to update your system automaticly
After update this script will shutdown your PC or restart it if you used -r parameter

If snapper is detected, it will also create a snapshot of your system

Syntax: ssu [-b/-br/-c/-h/-r/-v] (Please use only one argument)
Options:
  -b    Don't create a filesystem snapshot / Don't use snapper
  -br   Don't create a filesystem snapshot and restart the system
  -h    Shows this help
  -r    Restarts system after update
  -v    Shows version info
EOF

elif [[ $1 = "-v" ]] ; then
    cat << EOF
Simple System Update
Version: 1.1.1
Author: Skeletonek

Copyright (C) 2022-2023 Skeletonek
Licensed under GNU GPLv3
EOF

else
    #    Creating pre-snapshot
    if [[ $1 != "-b" || $1 != "-br" ]] ; then
        type snapper &>/dev/null && pre=$(sudo snapper create -d "ssu update" -t pre -p)
    fi

    #    Updating system
    type dnf &>/dev/null && sudo dnf update -y
    type apt &>/dev/null && sudo apt update && sudo apt upgrade -y
    type pacman &>/dev/null && sudo pacman -Syu
    type flatpak &>/dev/null && flatpak update -y
    type snap &>/dev/null && sudo snap update -y

    #    Creating post-snaphost
    if [[ $1 != "-b" || $1 != "-br" ]] ; then
        type snapper &>/dev/null && sudo snapper create -d "ssu update" -t post --pre-number $pre
    fi

    #    Turning off system
    if [[ $1 = "-r" || $1 = "-br" ]] ; then
        qdbus org.kde.Shutdown /Shutdown logoutAndReboot || dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 "org.freedesktop.login1.Manager.Reboot" boolean:true
    else
        qdbus org.kde.Shutdown /Shutdown logoutAndShutdown || dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 "org.freedesktop.login1.Manager.PowerOff" boolean:true
    fi
fi
